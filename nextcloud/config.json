{
  "name": "Nextcloud",
  "version": "0.0.1",
  "slug": "nextcloud",
  "description": "Nextcloud Home Assistant Add-on",
  "url": "https://github.com/elcajon/addon-nextcloud",
  "init": false,
  "arch": [
    "aarch64",
    "amd64"
  ],
  "options": {
    "reset_database": ""
  },
  "schema": {
    "reset_database": "bool"
  },
  "map": [
    "config:rw",
    "ssl:rw",
    "addons:rw",
    "share:rw",
    "backup:rw",
    "media:rw"
  ],
  "services": [
    "mysql:need"
  ],
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Nextcloud Web Port"
  },
  "image": "ghcr.io/elcajon/nextcloud/{arch}"
}